<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elventhhomework">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.elventhhomework.RecyclerStaggeredActivity"
            android:exported="true"></activity>
        <activity
            android:name="com.example.elventhhomework.RecyclerGridActivity"
            android:exported="true" />
        <activity
            android:name="com.example.elventhhomework.RecyclerLinearActivity"
            android:exported="true" />
        <activity android:name="com.example.elventhhomework.TestActivity2" />
        <activity
            android:name="com.example.elventhhomework.BannerPagerActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name="com.example.elventhhomework.BannerIndicatorActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name="com.example.elventhhomework.TabLayoutActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/searchable" />

        <activity
            android:name="com.example.elventhhomework.SearchResultActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.elventhhomework.SearchViewActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name="com.example.elventhhomework.OverflowMenuActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name="com.example.elventhhomework.ToolbarActivity"
            android:exported="true"
            android:theme="@style/AppCompatTheme" />
        <activity android:name="com.example.elventhhomework.TabThirdActivity" />
        <activity android:name="com.example.elventhhomework.TabSecondActivity" />
        <activity android:name="com.example.elventhhomework.TabFirstActivity" />
        <activity
            android:name="com.example.elventhhomework.TabHostActivity"
            android:exported="true" />
        <activity android:name="com.example.elventhhomework.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>